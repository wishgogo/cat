<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - C</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@*    <link rel="stylesheet" href="~/cat.styles.css" asp-append-version="true" />
*@</head>
<body>
   <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark2">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" id="logo">
                    <img src="@Href("~/Images/LOGO.png")" alt=""> 喵屋星球
                </a>
                <button class="navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav">
                        <li class="nav-item ">
                            <a href="#">
                                貓咪保母
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a href="#">
                                協尋貓咪
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a asp-area="" asp-controller="Home" asp-action="Privacy">
                                貓咪想家
                            </a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item ">
                            <a href="#" class="btn navbar-brand" data-toggle="modal" data-target="#loginModel" id="loginbtn">
                                <div class="loginbtn">
                                    <i class="fa-regular fa-circle-user"></i>&nbsp;會員名稱
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted bg-dark2">
        <div class="container">
            &copy; 第四組 - MeowPlanet -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
